{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "root": true,
  "ignorePatterns": [
    "projects/**/*",
    "*.d.ts"
  ],
  "plugins": [
    "html",
    "import",
    "simple-import-sort",
    "@typescript-eslint"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb-typescript/base"
      ],
      "rules": {

      }
    },
    {
      "files": [
        "*.component.html",
        "*.container.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ]
    },
    {
      "files": [
        "*.component.ts",
        "*.container.ts"
      ],
      "extends": [
        "plugin:@angular-eslint/template/process-inline-templates"
      ]
    }
  ]
}